{
  "name": "Word page checker",
  "version": "1.0.0",
  "description": "Firefox addon to highlight specific word",
  "permissions": [
    "activeTab",
    "background"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./build/paintMatches.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./build/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}